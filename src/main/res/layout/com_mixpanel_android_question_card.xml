<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView android:id="@+id/com_mixpanel_android_prompt_text" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:paddingBottom="20dp"
		android:textColor="#ffffff" android:textSize="18sp" />

	<EditText android:id="@+id/com_mixpanel_android_text_answer" android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/com_mixpanel_android_text_answer_border"
		android:textColor="#ffffff" android:textSize="18sp" android:padding="20dp"
		android:inputType="textCapSentences|textAutoCorrect|textMultiLine|textShortMessage"
		android:lines="3" android:imeOptions="actionDone" android:singleLine="true"
		android:visibility="gone" />

	<!-- cacheColorHint setting from http://android-developers.blogspot.com/2009/01/why-is-my-list-black-android.html -->
	<ListView android:id="@+id/com_mixpanel_android_choice_list" android:layout_width="match_parent"
		android:layout_height="0dp" android:layout_weight="1"
		android:textColor="#ffffff" android:textSize="18sp"
		android:scrollbars="none"
		android:cacheColorHint="#00000000" android:listSelector="@drawable/com_mixpanel_android_nocolor_list"
		android:background="@android:color/transparent" android:divider="@android:color/transparent"
		android:choiceMode="singleChoice" />
</LinearLayout>
